<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="view_post" content="width=device-width, initial-scale=1.0" />
    <title><%= post.title %></title>
    <style>
      .board-item {
        width: 30%;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        padding: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body>
    <h1>게시판 목록</h1>
    <div class="board-container">
      <div class="board-item">
        <h3><%= post.title %></h3>
        <p><%= post.content %></p>
        <p>Created Date: <%= post.created_date %></p>
        <p>Views: <%= post.viewCount %></p>
      </div>
      <% if (session.user && session.user.nickname === post.nickname) { %>
      <form action="/view_post/delete/<%= post.no %>" method="get">
        <button type="submit">삭제</button>
      </form>
      <button onclick="toggleEditForm()">수정</button>
      <div class="edit-form">
        <form action="/happy_post/update/<%= post.no %>" method="post">
          <div>
            <label for="title">제목:</label>
            <input
              type="text"
              id="title"
              name="title"
              value="<%= post.title %>"
              required
            />
          </div>
          <div>
            <label for="content">내용:</label>
            <textarea id="content" name="content" rows="5" required>
<%= post.content %></textarea
            >
          </div>
          <button type="submit">수정 완료</button>
        </form>
      </div>

      <% } %>
      <a href="/happy_post">목록으로 돌아가기</a>
    </div>

    <h2>댓글</h2>
    <div class="comment-container">
      <% comments.forEach(comment => { %>
      <div class="comment-item">
        <div class="comment-item" data-nickname="<%= comment.nickname %>"></div>
        <p><strong><%= comment.nickname %>:</strong> <%= comment.content %></p>
        <p>작성일: <%= comment.created_date %></p>
        <p>좋아요: <span class="likes-count"><%= comment.likes %></span></p>
        <button onclick="likeComment('<%= comment.nickname %>')">좋아요</button>
        <!-- <% if (session.user && session.user.nickname === comment.nickname) { %>
            <form action="/view_post/<%= post.no %>/comment/<%= comment.comment_no %>/delete" method="post">
              <button type="submit">삭제</button>
            </form>
          <% } %> -->
      </div>
      <% }) %>
    </div>

    <% if (session.user) { %>
    <form
      action="/view_post/<%= post.no %>/comment"
      method="post"
      class="comment-form"
    >
      <input type="hidden" name="postId" value="<%= post.no %>" />
      <div>
        <p>닉네임: <%= session.user.nickname %></p>
      </div>
      <div>
        <label for="content">댓글:</label>
        <textarea id="content" name="content" required></textarea>
      </div>
      <button type="submit">댓글 작성</button>
    </form>
    <% } else { %>
    <p>댓글을 작성하려면 <a href="/login">로그인</a> 하세요.</p>
    <% } %>

    <script>
      function toggleEditForm() {
        const editForm = document.querySelector(".edit-form");
        if (
          editForm.style.display === "none" ||
          editForm.style.display === ""
        ) {
          editForm.style.display = "block";
        } else {
          editForm.style.display = "none";
        }
      }

      function likeComment(nickname) {
        fetch(`/comment/${nickname}/like`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
        })
          .then((response) => {
            if (!response.ok) {
              throw new Error("좋아요 요청 실패");
            }
            // 페이지 새로고침
            location.reload();
          })
          .catch((error) => {
            console.error("좋아요 요청 오류:", error);
            alert("좋아요 요청 오류: " + error.message);
          });
      }
    </script>
  </body>
</html>
